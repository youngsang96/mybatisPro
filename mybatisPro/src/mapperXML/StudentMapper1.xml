<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="student">
	<insert id="insert" parameterType="student">
		insert into student (studno, name, grade, id, jumin, deptno1)
		values (#{studno}, #{name}, #{grade}, #{id}, #{jumin}, #{deptno1})
	</insert>

	<select id="select" resultType="student" parameterType="int">
		select * from student where studno = #{value}
	</select>



	<update id="update" parameterType="student">
		update student set grade = #{grade}, weight = #{weight}, height = #{height},
		profno = #{profno} where studno = #{studno}
	</update>

	<delete id="delete" parameterType="student">
		delete from student where studno = #{studno}
	</delete>

	<resultMap type="student" id="studentRMap">
		<result column="deptno1" jdbcType="BIGINT" property="major1" />
		<result column="deptno2" jdbcType="BIGINT" property="major2" />
	</resultMap>

	<select id="selectRMap" resultMap="studentRMap">
		select * from student
	</select>

</mapper>

